<h1>Dettaglio pizza</h1>


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="js_post_container">
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    debugger;
    let id = window.location.pathname.split('/')[3];

    axios.get('/api/pizza/get/' + id).then(res => {
        //ok
        const pizza = res.data;
        document.querySelector('.js_post_container').innerHTML +=
            `
                <div class="col-12 col-md-4 p-2">
                        <div class="card post h-100">
                            <img src="${pizza.foto}" class="card-img-top" alt="...">
                            <div class="card-body">
                            <h5 class="card-title">${pizza.nome}</h5>
                            <p class="card-text">${pizza.descrizione}</p>
                            </div>
                    </div>
                </div>
                `;
    }).catch(err => {
        //ko
    })

</script>